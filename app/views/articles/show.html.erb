<div class="container">
  <article>
    <h1>
      <%= @article.title %>
      <small>
        <%= link_to edit_article_path(@article) do %>
          <i class='fa-solid fa-pen'></i>
        <% end %>
        <%= link_to article_path(@article), method: :delete, data: { confirm: "You sure?" } do %>
          <i class='fa-regular fa-trash-can'></i>
        <% end %>
      </small>

    </h1>
  </article>
</div>



<p><%= @article.content %></p>
